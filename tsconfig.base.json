{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bigdeal/application": ["libs/application/src/index.ts"],
      "@bigdeal/common": ["libs/common/src/index.ts"],
      "@bigdeal/domain": ["libs/domain/src/index.ts"],
      "@bigdeal/infra": ["libs/infra/src/index.ts"],
      "@bigdeal/mappers": ["libs/mappers/src/index.ts"],
      "@bigdeal/messaging": ["libs/messaging/src/index.ts"],
      "@bigdeal/test-utils": ["libs/test-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
